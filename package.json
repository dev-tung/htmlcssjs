{
  "name": "asset-builder",
  "private": true,
  "devDependencies": {
    "sass": "^1.77.0",
    "terser": "^5.30.0",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "build:css": "sass scss/main.scss dist/style.css --no-source-map",
    "minify:css": "sass dist/style.css dist/style.min.css --style=compressed --no-source-map",
    "watch:css": "sass --watch scss/main.scss dist/style.css --no-source-map",

    "build:js": "cat js/*.js > dist/bundle.js && terser dist/bundle.js -o dist/bundle.min.js -c -m",
    "watch:js": "chokidar 'js/**/*.js' -c 'npm run build:js'",

    "build": "npm run build:css && npm run minify:css && npm run build:js",
    "watch": "npm-run-all --parallel watch:css watch:js"
  }

}
